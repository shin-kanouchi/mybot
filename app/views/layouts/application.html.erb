<!DOCTYPE html>
<html>
<head>
  <title>Mybot</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header class="header">
    <div class="header__bar row">
      <h1 class="grid-6"><a href="/">Mybot</a></h1>
      <% if user_signed_in? %>
        <span>
          <a class="button button--ujarak button--border-thin button--round-s button--text-medium" rel="nofollow" data-method="delete" href="/users/sign_out">ログアウト</a>
          <a class="button button--ujarak button--border-thin button--round-s button--text-medium" href="/">ホーム</a>
        </span>
        
      <% else %>
        <a class="button button--ujarak button--border-thin button--round-s button--text-medium" href="/users/sign_in">ログイン</a>
        <a class="button button--ujarak button--border-thin button--round-s button--text-medium" href="/users/sign_up">新規登録</a>
      <% end %>
    </div>
  </header>

  <%= yield %>

</body>
</html>
