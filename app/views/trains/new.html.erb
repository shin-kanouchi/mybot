<h1>Chat</h1>

<div id="chat-frame">
    <%= render partial: "sentence_bot", locals: { sentence: @sentence } %>
</div>

<div class="contents">
  <div class="edit">
    <%= form_tag("/trains/#{@train.id}", method: 'patch', remote: true) do %>
      <span class="input input--minoru">
        <input class="input__field input__field--minoru" type="text" name="tweet" id="input-1" placeholder="編集内容を入力">
        <label class="input__label input__label--minoru" for="input-1"></label>
      </span>
      <%# submit_tag("編集完了") %>
      <button type='submit' class="button button--ujarak button--border-medium button--round-s button--text-thick edit_color" name='action' value='send'>修正</button>
    <% end %>
  </div>
  <div class="new">
    <%= form_tag("/trains", method: "post", remote: true) do %>
      <%# text_field_tag "tweet"  %>
      <span class="input input--minoru">
        <input class="input__field input__field--minoru" type="text" name="tweet" id="input-2">
        <label class="input__label input__label--minoru" for="input-2"></label>
      </span>

      <%# submit_tag("送信") %>
      <button type='submit' class="button button--ujarak button--border-medium button--round-s button--text-thick" name='action' value='send'>送信</button>
    <% end %>
  </div>
</div>
