        <input type="radio" value="2" name="hair_color" id="product2_2" onclick="radio_serect2()"> <label for="product2_2">茶</label>
        <input type="radio" value="3" name="hair_color" id="product2_3" onclick="radio_serect3()"> <label for="product3_3">金</label>
        <input type="radio" value="4" name="hair_color" id="product2_4" onclick="radio_serect4()"> <label for="product4_4">桃</label>
        <br>
        <div class="bot-new">
          <img alt="Icon" src="<%= asset_path "icon_woman/woman_normal_1.png" %>" width="90" height="90" />
        </div>
        <br>
        <input type="submit" value="SENT">
      <% end %>
    </div>
  </div>
</body>
