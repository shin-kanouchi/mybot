<body>
  <div class="contents row">
    <div class="container">
      <%= form_tag('/bots', method: :post) do %>
        <h3>
          bot新規登録
        </h3>
        <input placeholder="ボットの名前 " type="text" name="bot_name">
        <br>
        <br>
        <label for="product">ボットの性別：</label><br>
        <input type="radio" value="1" name="character_flag" id="product_1" checked="true"> <label for="product_1">女性</label>
        <input type="radio" value="2" name="character_flag" id="product_2"> <label for="product_2">男性</label>
        <br>
        <br>
        <label for="product2">ヘアカラー：</label><br>
