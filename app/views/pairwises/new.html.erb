<h1>Pairwise evaluation</h1>

<div class="contents">
  文数: <%= @eval.pairwises.count %> / 10
  <p>
    <%= @tweet.sentence %>
  </p>
  <%= form_tag("/evaluates/#{@eval.id}/pairwises/#{@pairwise.id}", method: :patch) do %>
    <button type='submit' class="button4choice button--ujarak button--border-medium button--round-s button--text-thick" name='greater' value='send'><%= @pairwise.reply_x.sentence %></button>
    <button type='submit' class="button4choice button--ujarak button--border-medium button--round-s button--text-thick" name='less' value='send'><%= @pairwise.reply_y.sentence %></button>
    <button type='submit' class="button4choice button--ujarak button--border-medium button--round-s button--text-thick edit_color" name='equality' value='send'>どちらも同じレベル</button>
  <% end %>

</div>
